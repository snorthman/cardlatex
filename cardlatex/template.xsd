<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning" vc:minVersion="1.1">
  <xs:complexType name="TypeA">
    <xs:sequence>
      <xs:element name="description" type="xs:string"/>
      <xs:element name="value" type="xs:int"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="TypeB">
    <xs:sequence>
      <xs:element name="name" type="xs:string"/>
      <xs:element name="price" type="xs:decimal"/>
    </xs:sequence>
  </xs:complexType>

  <xs:element name="cardlatex">
    <xs:complexType>
      <xs:sequence maxOccurs="unbounded">
        <xs:element name="tex">
          <xs:complexType>
            <xs:sequence maxOccurs="unbounded">
              <xs:any processContents="skip" maxOccurs="unbounded"/>
            </xs:sequence>
            <xs:attribute name="file" type="xs:string" use="required"/>
            <xs:attribute name="text" type="xs:string"/>
            <xs:attribute name="dpi" type="xs:string"/>
            <xs:attribute name="spacing" type="measurement"/>
            <xs:attribute name="width" type="measurement"/>
            <xs:attribute name="height" type="measurement"/>
            <xs:attribute name="bleed" type="measurement"/>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
      <xs:attribute name="draft" type="xs:boolean" use="required"/>
      <xs:attribute name="print" type="xs:boolean" default="false"/>
      <xs:attribute name="combine" type="xs:boolean" default="false"/>
    </xs:complexType>
  </xs:element>

  <xs:simpleType name="measurement">
    <xs:restriction base="xs:string">
      <xs:pattern value="\d+(\.\d+)?(cm|mm|in)?"/>
    </xs:restriction>
  </xs:simpleType>

